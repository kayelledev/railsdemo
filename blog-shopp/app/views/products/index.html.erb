<section id="hello" style="background-image: url(http://gofourwalls.com/wp-content/uploads/2015/03/C-Premium-LivingRoom-featured-darkened.jpeg); opacity: .9; margin: 0; width: 100%; height: 30em;">
</section>

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Rooms</h2>
        </div>
    </div>
   
	<% @products.each do |category, products| %>
	  <div class="row">
	      <div class="col-lg-12 text-center">
	          <h3 class="section-subheading text-muted"><%= category.name %></h3>
	      </div>
	  
		  <ul>
		    <% products.each do |product| %>
			<div class="col-md-4 col-sm-6 portfolio-item">
			    <li>
			      <h4><%= link_to product.name, product_path(product.permalink) %></h4>
			      <p><%= product.short_description %></p>
			      <p><b>Price:</b> <%= number_to_currency product.price %></p>
			    </li>
			</div>
		    <% end %>
		  </ul>
	  </div>
	<% end %>
</div>